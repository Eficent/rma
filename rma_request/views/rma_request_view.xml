<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_rma_request_customer_tree" model="ir.ui.view">
            <field name="name">rma.request.tree</field>
            <field name="model">rma.request</field>
            <field name="arch" type="xml">
                <tree string="RMA Request"
                      decoration-muted="state in ('draft','to_approve')">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="product_qty"/>
                    <field name="qty_to_rma"/>
                    <field name="qty_in_rma"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_rma_request_supplier_tree" model="ir.ui.view">
            <field name="name">rma.request.supplier.tree</field>
            <field name="model">rma.request</field>
            <field name="arch" type="xml">
                <tree string="RMA Request"
                      decoration-muted="state in ('draft','to_approve')">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="product_qty"/>
                    <field name="qty_to_rma"/>
                    <field name="qty_in_rma"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_rma_request_supplier_form" model="ir.ui.view">
            <field name="name">rma.request.supplier.form</field>
            <field name="model">rma.request</field>
            <field name="arch" type="xml">
                <form string="RMA Request">
                    <sheet>
                        <label string="RMA Request"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <div name="button_box" class="oe_button_box">
                            <button type="object"  name="action_view_rmas"
                                    class="oe_stat_button"
                                    icon="fa-truck">
                                <field name="rma_count" widget="statinfo"
                                       string="RMA's"/>
                            </button>
                            <button type="object"  name="action_view_rma_lines"
                                    class="oe_stat_button"
                                    icon="fa-truck">
                                <field name="rma_line_count" widget="statinfo"
                                       string="RMA Lines"/>
                            </button>
                        </div>
                        <group>
                            <group name="contact" string="Contact">
                                <field name="requested_by" readonly="1"/>
                                <field name="assigned_to" readonly="1"/>
                            </group>
                            <group name="product" string="Product" colspan="2">
                                <field name="product_id"/>
                                <newline/>
                                <field name="product_qty"/>
                                <field name="uom_id" groups="product.group_uom"/>
                            </group>
                            <group name="organization" string="Organization">
                                <field name="warehouse_id"
                                       groups="stock.group_adv_location"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_rma_request_customer_form" model="ir.ui.view">
            <field name="name">rma.request.customer.form</field>
            <field name="model">rma.request</field>
            <field name="arch" type="xml">
                <form string="RMA Request">
                    <sheet>
                        <label string="RMA Request"/>
                        <h1>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </h1>
                        <div name="button_box" class="oe_button_box">
                            <button type="object"  name="action_view_rmas"
                                    class="oe_stat_button"
                                    icon="fa-truck">
                                <field name="rma_count" widget="statinfo"
                                       string="RMA's"/>
                            </button>
                            <button type="object"  name="action_view_rma_lines"
                                    class="oe_stat_button"
                                    icon="fa-truck">
                                <field name="rma_line_count" widget="statinfo"
                                       string="RMA Lines"/>
                            </button>
                        </div>
                        <group>
                            <group name="contact" string="Contact">
                                <field name="requested_by" readonly="1"/>
                                <field name="assigned_to" readonly="1"/>
                            </group>
                            <group name="product" string="Product" colspan="2">
                                <field name="product_id"/>
                                <newline/>
                                <field name="product_qty"/>
                                <field name="uom_id" groups="product.group_uom"/>
                            </group>
                            <group name="organization" string="Organization">
                                <field name="warehouse_id"
                                       groups="stock.group_adv_location"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_rma_rma_request_filter" model="ir.ui.view">
            <field name="name">rma.request.select</field>
            <field name="model">rma.request</field>
            <field name="arch" type="xml">
                <search string="Search RMA Request">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="requested_by"/>
                    <field name="assigned_to"/>
                    <separator/>
                    <filter domain="[('assigned_to','=',uid)]"
                            help="My RMA Requests"/>
                    <group expand="0" string="Group By">
                        <filter name="partner" string="Partner" domain="[]"
                                context="{'group_by':'partner_id'}"/>
                        <filter name="product" string="Product" domain="[]"
                                context="{'group_by':'product_id'}"/>
                        <filter name="to_rma" string="To RMA"
                                domain="[('qty_to_rma', '>', 0)]"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="action_rma_request_customer"
                model="ir.actions.act_window">
            <field name="name">Customer RMA Requests</field>
            <field name="res_model">rma.request</field>
            <field name="domain">[('type','=', 'customer')]</field>
            <field name="context">{"search_default_assigned_to":uid}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_rma_request_customer_form"/>
        </record>

        <record id="action_rma_request_supplier" model="ir.actions.act_window">
            <field name="name">Supplier RMA Requests</field>
            <field name="res_model">rma.request</field>
            <field name="domain">[('type','=', 'supplier')]</field>
            <field name="context">{"search_default_assigned_to":uid}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_rma_request_supplier_tree"/>
        </record>


        <record id="action_rma_request_customer_tree"
                model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_rma_request_customer"/>
        </record>

        <record id="action_rma_request_customer_form"
                model="ir.actions.act_window.view">
            <field eval="4" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_rma_request_customer_form"/>
            <field name="act_window_id" ref="action_rma_request_customer"/>
        </record>


        <record id="action_rma_request_supplier_tree"
                model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_rma_request_supplier"/>
        </record>

        <record id="action_rma_request_supplier_form"
                model="ir.actions.act_window.view">
            <field eval="4" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_rma_request_supplier_form"/>
            <field name="act_window_id" ref="action_rma_request_supplier"/>
        </record>

        <menuitem
            id="menu_rma_request_customer"
            sequence="20"
            parent="rma.menu_customer_rma"
            groups="rma.group_rma_customer_user"
            action="action_rma_request_customer"
            />

        <menuitem
            id="menu_rma_request_supplier"
            sequence="20"
            parent="rma.menu_supplier_rma"
            groups="rma.group_rma_supplier_user"
            action="action_rma_request_supplier"
            />

    </data>
</odoo>
