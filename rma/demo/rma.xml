<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="rma_operation_replace" model="rma.operation">
        <field name="name">Replace Customer</field>
        <field name="code">RPLC</field>
        <field name="refund_policy">no</field>
        <field name="receipt_policy">ordered</field>
        <field name="delivery_policy">received</field>
        <field name="customer_route_id" ref="rma.route_rma_customer"/>
        <field name="is_dropship">False</field>
    </record>

    <record id="rma_operation_replace" model="rma.operation">
        <field name="name">Replace Supplier</field>
        <field name="code">RPLS</field>
        <field name="refund_policy">no</field>
        <field name="receipt_policy">ordered</field>
        <field name="delivery_policy">received</field>
        <field name="supplier_route_id" ref="rma.route_rma_supplier"/>
        <field name="is_dropship">False</field>
    </record>

    <record id="rma_operation_refund" model="rma.operation">
        <field name="name">Refund Customer</field>
        <field name="code">RFC</field>
        <field name="refund_policy">ordered</field>
        <field name="receipt_policy">no</field>
        <field name="delivery_policy">no</field>
        <field name="customer_route_id" ref="rma.route_rma_customer"/>
        <field name="is_dropship">False</field>
    </record>

    <record id="rma_operation_refund" model="rma.operation">
        <field name="name">Refund Supplier</field>
        <field name="code">RFS</field>
        <field name="refund_policy">ordered</field>
        <field name="receipt_policy">no</field>
        <field name="delivery_policy">no</field>
        <field name="supplier_route_id" ref="rma.route_rma_supplier"/>
        <field name="is_dropship">False</field>
    </record>

    <record id="rma_operation_ds_replace" model="rma.operation">
        <field name="name">Replace dropship in both sides</field>
        <field name="code">DSRPL</field>
        <field name="refund_policy">no</field>
        <field name="receipt_policy">ordered</field>
        <field name="delivery_policy">received</field>
        <field name="customer_route_id" ref="rma.route_rma_dropship"/>
        <field name="supplier_route_id" ref="rma.route_rma_dropship"/>
        <field name="is_dropship">True</field>
    </record>

    <record id="rma_operation_ds_replace" model="rma.operation">
        <field name="name">Customer Refund and Supplier Replace</field>
        <field name="code">DSRPL</field>
        <field name="refund_policy">received</field>
        <field name="receipt_policy">ordered</field>
        <field name="delivery_policy">received</field>
        <field name="customer_route_id" ref="rma.route_rma_dropship"/>
        <field name="supplier_route_id" ref="rma.route_rma_dropship"/>
        <field name="is_dropship">True</field>
    </record>

</odoo>
