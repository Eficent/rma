<odoo>

    <record id="qc_issue_make_rma_view_form" model="ir.ui.view">
        <field name="name">qc.issue.make.rma.form</field>
        <field name="model">qc.issue.make.rma</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
             <form string="Disposition: RMA">
                 <div class="oe_inline">
                    <group>
                        <field name="qc_issue_id" class="oe_inline" options='{"no_open": True}'/>
                    </group>
                 </div>
                 <group name="options">
                     <field name="new_or_update"/>
                 </group>
                 <group name="updating_rma" string="Existing RMA to update:"
                        attrs="{'invisible': [('new_or_update','!=','update')]}">
                    <field name="rma_id"/>
                 </group>
                 <group name="new_rma" string="New RMA details:"
                        attrs="{'invisible': [('new_or_update','!=','new')]}">
                     <field name="rma_type"/>
                     <field name="partner_id"/>
                 </group>
                 <newline/>
                 <group colspan="2">
                     <button name="create_new_rma"
                             string="Create RMA" type="object"
                             class="oe_highlight"
                             attrs="{'invisible': [('new_or_update','!=','new')]}"/>
                     <button name="update_existing_rma"
                             string="Update RMA (WIP)" type="object"
                             class="oe_highlight"
                             attrs="{'invisible': [('new_or_update','!=','update')]}"/>
                     <button special="cancel" string="Cancel" class="oe_link"/>
                 </group>
            </form>
        </field>
    </record>

    <record id="action_qc_issue_make_rma" model="ir.actions.act_window">
        <field name="name">Create RMA</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">qc.issue.make.rma</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="qc_issue_make_rma_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
